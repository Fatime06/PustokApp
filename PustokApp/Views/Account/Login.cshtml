@model UserLoginVM
<div class="container">
	<div class="row">
		<div class="mx-auto col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
			<!-- Login Form -->
			<form method="post">
				<div class="login-form">
					<h4 class="login-title">Login Page</h4>
					<div class="row">
						<div class="col-md-12 col-12 mb--15">
							<label asp-for="UserNameOrEmail">Full Name</label>
							<input asp-for="UserNameOrEmail" class="mb-0 form-control" placeholder="Enter your full name" />
							<span class="text-danger" asp-validation-for="UserNameOrEmail"></span>
						</div>

						<div class="col-lg-6 mb--20">
							<label asp-for="Password">Password</label>
							<input asp-for="Password" type="password" class="mb-0 form-control" placeholder="Enter your password">
							<span class="text-danger" asp-validation-for="Password"></span>
						</div>

						<div class="col-md-12">
							<label asp-for="RememberMe"></label>
							<input asp-for="RememberMe" value="" />
						</div>

						<div class="col-md-12">
							<button type="submit" class="btn btn-outlined">Login</button>
							<a asp-action="register" class="btn btn-outlined">Register</a>
							<a asp-action="forgotpassword" class="btn btn-outlined">Forgot Password</a>
						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly"></div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section scripts {
