@model UserProfileUpdateVM

<form method="post">
    <div class="row">
        <div class="col-lg-6 col-12 mb--30">
            <label asp-for="UserName">User Name</label>
            <input asp-for="UserName" class="form-control" placeholder="User Name">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="col-lg-6 col-12 mb--30">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Full Name">
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="col-12 mb--30">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="col-12 mb--30">
            <h4>Password change</h4>
        </div>
        <div class="col-12 mb--30">
            <label asp-for="CurrentPassword">Current Password</label>
            <input asp-for="CurrentPassword" class="form-control" placeholder="Current Password" type="password">
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>
        <div class="col-lg-6 col-12 mb--30">
            <label asp-for="NewPassword">New Password</label>
            <input asp-for="NewPassword" class="form-control" placeholder="New Password" type="password">
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="col-lg-6 col-12 mb--30">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn--primary">Save Changes</button>
        </div> 
        <div asp-validation-summary="ModelOnly" class="col-12 text-danger" />
    </div>
</form>
