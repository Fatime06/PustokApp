@using PustokApp.Helpers
@model List<Slider>
@{
    int count = 0;
}

<div class="container">
    <div class="row">
        <a asp-action="create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Count</th>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">Desc</th>
                    <th scope="col">Link</th>
                    <th scope="col">Text</th>
                    <th scope="col">Setting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td>@(++count)</td>
                        <td><img width="100" height="100" src="~/assets/image/bg-images/@slider.Image" /></td>
                    <td>@slider.Title</td>
                    <td>@slider.Description</td>
                    <td>@slider.ButtonLink</td>
                    <td>@slider.ButtonText</td>
                        <td>
                        <a asp-action="detail" asp-route-id="@slider.Id"> Detail</a>
                            <a asp-action="edit" asp-route-id="@slider.Id"> Edit</a>
                            <a asp-action="delete" asp-route-id="@slider.Id"> Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

