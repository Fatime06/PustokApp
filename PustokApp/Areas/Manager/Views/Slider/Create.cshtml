@model Slider
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title">Title </label>
                <input asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="ButtonLink">ButtonLink</label>
                <input asp-for="ButtonLink" class="form-control">
                <span class="text-danger" asp-validation-for="ButtonLink"></span>
            </div>

            <div class="form-group">
                <label asp-for="ButtonText">ButtonText</label>
                <input asp-for="ButtonText" class="form-control">
                <span class="text-danger" asp-validation-for="ButtonText"></span>
            </div>

            <div class="form-group">
                <label asp-for="Photo">Image</label>
                <input asp-for="Photo" type="file" class="form-control" id="imageInput">
                <img id="imgPreview" style="display:none; margin-top:10px;" width="300" height="100" src="" alt="Preview Image" />
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order">Order</label>
                <input asp-for="Order" class="form-control">
                <span class="text-danger" asp-validation-for="Order"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
    <script>
        $(document).ready(function () {
            $("#imageInput").change(function (ev) {
                let file = ev.target.files[0];

                if (!file) {
                    $("#imgPreview").hide();
                    return;
                }

                var uploading = new FileReader();
                uploading.onload = function (displayimg) {
                    $("#imgPreview").attr("src", displayimg.target.result).show();
                };
                uploading.readAsDataURL(file);
            });
        });
    </script>
}
