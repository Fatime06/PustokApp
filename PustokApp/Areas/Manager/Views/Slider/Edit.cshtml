@model Slider
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title">Title </label>
                <input asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="ButtonLink">ButtonLink</label>
                <input asp-for="ButtonLink" class="form-control">
                <span class="text-danger" asp-validation-for="ButtonLink"></span>
            </div>

            <div class="form-group">
                <label asp-for="ButtonText">ButtonText</label>
                <input asp-for="ButtonText" class="form-control">
                <span class="text-danger" asp-validation-for="ButtonText"></span>
            </div>

            <div class="form-group">
                <label asp-for="Photo">Image</label>
                <input asp-for="Photo" type="file" class="form-control">
                <span class="text-danger" asp-validation-for="Photo"></span>
                <img src="~/assets/image/bg-images/@Model.Image" width="300" height="100" />
            </div>

            <div class="form-group">
                <label asp-for="Order">Order</label>
                <input asp-for="Order" class="form-control">
                <span class="text-danger" asp-validation-for="Order"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}