@model Genre
<div class="container">
    <div class="row">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Genre name </label>
                <input asp-for="Name" name="name" type="text" class="form-control" placeholder="Enter genre name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section scripts{
    @await Html.PartialAsync("_ValidationPartial")
}